@model Country

@{
    ViewData["Title"] = "Додати Країну";
}

<h4>Додати Країну</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <table>
                <tr>
                    <td>
                        <input type="submit" value="Додати Країну" class="btn btn-success" />
                    </td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>
                        <button type="button" class="btn btn-warning" data-toggle="modal"  data-target="#confirm">
                            Назад
                        </button>
                    </td>
                </tr>
            </table>
        </form>
    </div>
</div>

<form method="get" asp-action="Index">
    <div class="modal fade" id="confirm" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Сповіщення</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body delete-modal-body">
                    Країну не збережено. Дійсно бажаєте вийти?
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Вийти</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Відмінити</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
