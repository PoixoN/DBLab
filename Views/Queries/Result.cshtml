@model Query

@{
    ViewData["Title"] = "Результат";
}

<h1>Результат пошуку</h1>
<hr />

@if (string.IsNullOrEmpty(Model.Error))
{
    @if (Model.QueryId.Equals("S1"))
    {
        <p style="font-size:20px">
            <b>Країни розробників, в яких ігри із статусом @Model.StatusName:</b>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            КраЇна
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.CountryNames.Count; i++)
                    {
                        <tr>
                            <td>
                                @Model.CountryNames[i]
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </p>
    }
    else if (Model.QueryId.Equals("S2"))
    {
        <p style="font-size:20px">
            <b>Прізвища покупців, що купили щонайменше одну гру розробника @Model.DevName</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Прізвище
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CustLastNames.Count; i++)
                {
                    <tr>

                        <td>
                            @Model.CustLastNames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("S3"))
    {
        <p style="font-size:20px">
            <b>Cтатуси ігор які не випускає розробник @Model.DevName</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Назва
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.StatusNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.StatusNames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("S4"))
    {
        <p style="font-size:20px">
            <b>Знайти найбільшу ціну гри розробника @Model.DevName</b> @decimal.Round(Model.MaxPrice, 2, MidpointRounding.AwayFromZero)
        </p>
    }
    else if (Model.QueryId.Equals("S5"))
    {
        <p style="font-size:20px">
            <b>Знайти всі імена розробників, які випускають щонайменше одну гру вартістю не меньше ніж @Model.Price</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Назва
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.DevNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.DevNames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("S6"))
    {
        <p style="font-size:20px">
            <b>Знайти покупців, що мають ігри із жанром @Model.GenreName та ціною більше ніж @Model.Price</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Ім'я
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CustNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.CustNames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("A3"))
    {
        <p style="font-size:20px">
            <b>Назви країн, розробники з яких продають програмні продукти принаймні за всіма тими цінами, що й розробник із кодом @Model.DevId</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Назва
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CountryNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.CountryNames[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("A1"))
    {
        <p style="font-size:20px">
            <b>Email покупців, які придбали точно ті ж самі програмні продукти, що й покупець з призвищем @Model.CustSurname</b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Email
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CustEmails.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.CustEmails[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("A2"))
    {
        <p style="font-size:20px">
            <b> Імена та email-и покупців з прізвищем @Model.CustSurname, які придбали всі наявні програмні продукти.
            </b>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Ім'я
                    </th>
                    <th>
                        Email
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.CustNames.Count; i++)
                {
                    <tr>
                        <td>
                            @Model.CustNames[i]
                        </td>
                        <td>
                            @Model.CustEmails[i]
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else if (Model.QueryId.Equals("T1"))
    {

    }
    else if (Model.QueryId.Equals("T2"))
    {

    }
}
else
{
    <p style="font-size:40px">
        Нічого не знайдено =(
    </p>
}


<form method="get" asp-controller="Queries" asp-action="Index">
    <input type="submit" class="btn btn-primary" value="Назад" />
</form>


<div class="modal fade" id="error" tabindex="-1" role="alertdialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Сповіщення</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="errorText">
                @Model.Error
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Далі</button>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        window.addEventListener("load", function () {
            if ('@Model.ErrorFlag' == 1) {
                $("#error").modal();
            }
        });
    </script>
}